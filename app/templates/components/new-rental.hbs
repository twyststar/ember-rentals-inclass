{{#if addNewRental}}
<div class="panel panel-success">
  <div class="panel-heading">
    <h1>New Rental</h1>
  </div>
  <div class="panel-body">
    <div>
      <form>
        <div class="form-group">
          <label for="owner">Owner</label>
          {{input value=owner id="owner"}}
        </div>

        <div class="form-group">
          <label for="type">Type</label>
          {{input value=type id="type"}}
        </div>

        <div class="form-group">
          <label for="city">City</label>
          {{input value=city id="city"}}
        </div>

        <div class="form-group">
          <label for="bedrooms">Number of Bedrooms</label>
          {{input value=bedrooms id="bedrooms"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image"}}
        </div>

        <div class="panel-footer">
          <button class="btn bg-success"{{action 'saveRental1'}}>Save</button>
        </div>
      </form>
    </div>
  </div>

</div>
<p>
  </p>
{{else}}
<button class="btn bg-info"{{action 'rentalFormShow'}}>New Rental</button>
{{/if}}
