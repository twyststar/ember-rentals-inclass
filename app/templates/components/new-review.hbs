{{#if addNewReview}}
<br>
<div class="panel panel-success">
  <div class="panel-heading">
    <h1>New Review</h1>
  </div>
  <div class="panel-body">
    <div>
      <form>
        <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="rating">Rating</label>
        {{input value=rating id="rating"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>
      <div class="panel-footer">
        <button class="btn bg-success"{{action 'saveReview'}}>Save</button>
      </div>
      </form>
    </div>
  </div>
</div>

{{else}}
<br>
<button class="btn bg-info"{{action 'reviewFormShow'}}>New Review</button>
{{/if}}
